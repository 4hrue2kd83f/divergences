inca_annex_tahiti = {
	is_shown = {
		exists = c:TWT
		ROOT = c:TWT
    exists = c:PLY
	}
	possible = {
    navy_size >= 10
	}
	when_taken = {
		s:STATE_TAHITI.region_state:PLY = {
			set_state_owner = c:TWT
		}
	}

	ai_chance = {
		base = 100
	}
}

inca_language_reform = {
	is_shown = {
		exists = c:TWT
		ROOT = c:TWT
		ruler = { has_variable = is_llapa_inka }
    NOT = { has_modifier = inca_language_good_modifier }
	}
	possible = {
		has_technology_researched = mass_communication
    any_scope_building = {
		  is_building_type = building_university
			occupancy > 0.9
			level >= 5
		}
	}
	when_taken = {
		remove_modifier = inca_language_bad_modifier
		add_modifier = { type = inca_language_good_modifier months = -1 }
	}

	ai_chance = {
		base = 100
	}
}

inca_province_reform = {
	is_shown = {
		exists = c:TWT
		ROOT = c:TWT
		ruler = { has_variable = is_llapa_inka }
    NOT = { has_modifier = inca_province_good_modifier }
	}
	possible = {
		has_technology_researched = central_archives
		has_modifier = inca_railroad_modifier
	when_taken = {
    c:TWT = {
		  remove_modifier = inca_province_bad_modifier
		  add_modifier = { type = inca_province_good_modifier months = -1 }
    }
	}

	ai_chance = {
		base = 100
	}
}

inca_northern_claims = {
	is_shown = {
		exists = c:TWT
		ROOT = c:TWT
    NOT = { has_global_variable = chinchasuyu_expanded }
	}
	possible = {
		has_technology_researched = nationalism
	}
	when_taken = {
		s:STATE_CAUCA = { add_claim = ROOT }
		s:STATE_CUNDINAMARCA = { add_claim = ROOT }
		s:STATE_ANTIOQUIA = { add_claim = ROOT }
		s:STATE_GUAVIARE = { add_claim = ROOT }
    set_global_variable = chinchasuyu_expanded 
	}

	ai_chance = {
		base = 100
	}
}

inca_eastern_claims = {
	is_shown = {
		exists = c:TWT
		ROOT = c:TWT
    NOT = { has_global_variable = antisuyu_expanded }
	}
	possible = {
		has_technology_researched = nationalism
	}
	when_taken = {
		s:STATE_AMAZONIE_PROFONDE = { add_claim = ROOT }
		s:STATE_PROCHE_AMAZONIE = { add_claim = ROOT }
		s:STATE_AMAZONIE_INFERIEURE = { add_claim = ROOT }
		s:STATE_GRAND_CHACO = { add_claim = ROOT }
    set_global_variable = antisuyu_expanded 
    if = {
      limit = {
			  ruler = { has_variable = is_washkar_inka } 
      }
      trigger_event = { dvg_tawantisuyu_reconquest.23 }
	  }
  }
	ai_chance = {
		base = 100
	}
}

inca_accept_afro_latino = {
	is_shown = {
		exists = c:TWT
		ROOT = c:TWT
    c:TWT = {
      AND = {
        owns_entire_state_region = STATE_ANTIOQUIA
        NOT = {country_has_primary_culture = cu:afro_latino }
      }
    }
	}
	possible = {
		NOT = {country_has_primary_culture = cu:afro_latino }
	}
	when_taken = {
		add_primary_culture = cu:afro_latino
	}

	ai_chance = {
		base = 100
	}
}
